      <div class="card center-align">
        <div class="card-content">
          <span class="card-title">Contract</span>
          <div class="row">
            <form method="POST" action="/api/email" class="col s12">
              <div class="row">

                <div class="input-field col s6">
                  <label for="title">Title</label>
                  <select>
                    <input id="title" type="text" class="validate">
                  </select>
                </div>

              </div>

              <select class="browser-default">

                <option value="" disabled selected>Type of Contract</option>
                <option value="1">Basic</option>
                <option value="2">Payment Agreement</option>
                <option value="3"></option>
                <option value="4"></option>
                <option value="5"></option>
                <option value="6"></option>
                <option value="7"></option>
                <option value="8"></option>
                <option value="9"></option>
                <option value="10"></option>
              </select>

              <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="offer" class="materialize-textarea"></textarea>
                      <label for="offer">Offer</label>
                    </div>
                  </div>
                </form>
              </div>e

              <div class="row">
                <form class="col s12">
                  <div class="row">
                    <div class="input-field col s12">
                      <textarea id="extra" class="materialize-textarea"></textarea>
                      <label for="extra">Extra Stipulations</label>
                    </div>
                  </div>
                </form>
              </div>


              <div class="row">
                <div class="input-field col s6">
                  <input id="contractee-email" type="text" data-length="10">
                  <label for="contractee-email">Contractee(e-mail address)</label>
                </div>
              </div>

              <div class="row">
                  <div class="input-field col s6">
                    <input id="signature" type="text" data-length="10">
                    <label for="signature">Signature</label>
                  </div>
                </div>



              <button class="btn waves-effect waves-light" type="submit" id="submitcontract"name="action">Submit
