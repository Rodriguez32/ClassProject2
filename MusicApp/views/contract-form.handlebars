<div class="row">
  <div class="col s12 m6 ">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">Contract</span>
        <div class="row">
          <form id="contractform" class="col s12">
            <div class="row">

              <div class="input-field col s6">
                <label for="creatoremail">Your email address</label>
                <select>
                  <input name="creatoremail" id="creatoremail" type="text" class="validate">
                </select>
              </div>

              <div class="input-field col s6">
                <label for="title">Title</label>
                <select>
                  <input name="title" id="title" type="text" class="validate">
                </select>
              </div>

            </div>

            <select name="type" id="type" class="browser-default">

              <option value="">Type of Contract</option>
              <option value="1">Basic</option>
              <option value="2">Payment Agreement</option>
              <option value="3"></option>
              <option value="4"></option>
              <option value="5"></option>
              <option value="6"></option>
              <option value="7"></option>
              <option value="8"></option>
              <option value="9"></option>
              <option value="10"></option>
            </select>

            <div class="row">
              <form class="col s12">
                <div class="row">
                  <div class="input-field col s12">
                    <textarea name="offer" id="offer" class="materialize-textarea"></textarea>
                    <label for="offer">Offer</label>
                  </div>
                </div>
              </form>
            </div>

            <div class="row">
              <form class="col s12">
                <div class="row">
                  <div class="input-field col s12">
                    <textarea name="extra" id="extra" class="materialize-textarea"></textarea>
                    <label for="extra">Extra Stipulations</label>
                  </div>
                </div>
              </form>
            </div>


            <div class="row">
              <div class="input-field col s6">
                <input name="contracteeEmail" id="contracteeEmail" type="text" data-length="10">
                <label for="contracteeEmail">Contractee(e-mail address)</label>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6">
                <input name="signature" id="signature" type="text" data-length="10">
                <label for="signature">Signature</label>
              </div>
            </div>



            <button class="btn waves-effect waves-light" type="submit" id="submitcontract" name="submitbtn">Submit
              <i class="material-icons right">send</i>
            </button>
            <br>
            <p>By clicking Submit, you indicate that you have Read and Agree to the <a href="#">
                Terms</a> .</p>

          </form>
        </div>
      </div>

    </div>
